<div class= "card text-center d-flex justify-content-center"  >
  <div class="jumbotron jumbotron-fluid"  style="background-image: url(https://thehappinessconsultancy.com/wp-content/uploads/2017/11/Cover-Happy-Habits-1080x650.png); background-size: 100%; background-position: 55% 45%;">
  <div class="container">
    <h2 class="display-4" style="text-shadow: 2px 2px 0px white;"> Créez votre évenement !</h2>
  </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8">
      <%= form_for @event do |f| %>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
            <label>Titre de l'évenement :</label>
            <%= f.text_field :title %>
          </li>
          <li class="list-group-item">
            <label>Date de l'évenement :</label>
            <%= f.text_field :start_date %>
          </li>
          <li class="list-group-item">
            <label>Durée de l'évenement :</label>
            <%= f.text_field :duration %>
          </li>
          <li class="list-group-item">
            <label>Prix de la participation :</label>
            <%= f.text_field :price %>
          </li>
          <li class="list-group-item">
            <label>Localisation de l'évenement :</label>
            <%= f.text_field :location %>
          </li>
          <li class="list-group-item">
            <label>Description de votre évenement :</label>
            <%= f.text_area :description, class: 'form-control' %>
          </li>
          <div class="form-group">
            <br>
            <button type="submit" class="btn btn-secondary">Créer l'évenement !</button>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
